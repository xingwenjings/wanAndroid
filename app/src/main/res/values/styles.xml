<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoadingTheme" parent="Theme.AppCompat.Dialog">
        <!--dialog背景设置为透明-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--去掉背景半透明效果-->
        <item name="android:backgroundDimEnabled">false</item>

    </style>
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!--全屏的界面-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Base"  parent="Theme.AppCompat">
        <!--隐藏ActionBar和标题-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--ToolBar的颜色-->
        <item name="colorPrimary">@color/colorAccent</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <!--EditText,RadioButton,CheckBox的点击效果颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="toolbar">
        <item name="android:colorControlNormal" tools:targetApi="lollipop">#ffffff</item>
    </style>

    <style name="AppThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<!--menu三个点变白-->
    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
</resources>
