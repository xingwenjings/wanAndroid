<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_parent">
    <TextView
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_auther"
        android:text="@string/know_article_auther"/>
    <TextView
        android:textSize="@dimen/sp_10"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data"
        android:layout_marginRight="@dimen/dp_15"
        android:text="@string/app_name"/>
    <TextView
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@id/tv_auther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="@string/app_name"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/app_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_superChapterName"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/tv_superChapterName"
        android:layout_below="@id/tv_title"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/tv_chapterName"/>
    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/follow_unselected"/>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/view_xian"/>
</LinearLayout>